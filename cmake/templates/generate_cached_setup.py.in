from __future__ import print_function
import argparse
import os
import stat
import sys

try:
    from catkin.environment_cache import generate_environment_script
except ImportError:
    # find the import relatively to make it work before installing catkin
    sys.path.append(os.path.join('@catkin_EXTRAS_DIR@', '..', 'python'))
    from catkin.environment_cache import generate_environment_script


code = generate_environment_script('@CATKIN_DEVEL_PREFIX@/env.@script_ext@')

output_filename = '@SETUP_DIR@/@SETUP_FILENAME@.@script_ext@'
with open(output_filename, 'w') as f:
    #print('Generate script for cached setup "%s"' % output_filename)
    f.write('\n'.join(code))

mode = os.stat(output_filename).st_mode
os.chmod(output_filename, mode | stat.S_IXUSR)
